<odoo>
    <data>
        <!-- Vistas para el modelo ia.agente -->
        <record id="ia_agente_view_tree" model="ir.ui.view">
            <field name="name">ia.agente.tree</field>
            <field name="model">ia.agente</field>
            <field name="arch" type="xml">
                <tree string="Agentes de IA">
                    <field name="name"/>
                    <field name="estado"/>
                    <field name="model_name"/>
                    <field name="estado"/>
                </tree>
            </field>
        </record>

        <record id="ia_agente_view_form" model="ir.ui.view">
            <field name="name">ia.agente.form</field>
            <field name="model">ia.agente</field>
            <field name="arch" type="xml">
                <form string="Agente de IA">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="estado"/>
                            <field name="model_name" />
                            <field name="is_global"/>
                        </group>
                        <notebook>
                            <page string="Prompt">
                                <field name="prompt"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acciones de ventana -->
        <record id="ia_agente_action" model="ir.actions.act_window">
            <field name="name">Agentes de IA</field>
            <field name="res_model">ia.agente</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
