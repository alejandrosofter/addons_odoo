<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- VISTAS ///////////////////////////////////////////// -->
        <record id="view_whatsapp_tree" model="ir.ui.view">
            <field name="name">whatsapp.tree</field>
            <field name="model">whatsapp.whatsapp</field>
            <field name="arch" type="xml">
                <tree >

                    <field name="name" string="Nombre"/>
                    <field name="user" string="Usuario asociado"/>
                    <!-- <field name="instancia" string="Instancia asociada"/> -->
                    <field name="estado" string="Estado"/>

                </tree>
            </field>
        </record>
        <record id="view_whatsapp_form" model="ir.ui.view">
            <field name="name">whatsapp.form</field>
            <field name="model">whatsapp.whatsapp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="Nombre"/>
                            <field name="user" string="Usuario asociado"/>
                            <!-- <field name="instancia" string="Instancia asociada"/> -->
                            <field name="estado" string="Estado"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de BÃºsqueda -->
        <record id="view_whatsapp_search" model="ir.ui.view">
            <field name="name">whatsapp.search</field>
            <field name="model">whatsapp.whatsapp</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Nombre"/>
                    <field name="user" string="Usuario asociado"/>
                    <!-- <field name="instancia" string="Instancia asociada"/> -->
                    <field name="estado" string="Estado"/>
                </search>
            </field>
        </record>
        <!-- ACCIONES ////////////////////////////////// -->
        <record model="ir.actions.act_window" id="whatsapp_action_view_tree">
            <field name="name">Listado  whatsapp</field>
            <field name="res_model">whatsapp.whatsapp</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENUS ///////////////////////////////////////////////// -->
        <menuitem id="whatsapp_menu_root" name="Whastapp" />
        <menuitem id="whatsapp_menu" name="Whatspapp" parent="whatsapp_menu_root" action="whatsapp_action_view_tree" />

    </data>
</odoo>


