<odoo>
    <data>
        <record id="whatsapp_message_wizard_form" model="ir.ui.view">
            <field name="name">whatsapp.message.wizard.form</field>
            <field name="model">whatsapp.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Enviar WhatsApp">
                    <group>
                        <field name="partner_id"/>
                        <field name="message"/>
                    </group>
                    <footer>
                        <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                        <button type="object" name="action_create_message" string="Aceptar" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>